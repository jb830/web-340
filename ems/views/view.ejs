<%- include('header') -%>
<main class="container">
  <h2 class="font-weight-light">

    <h2>-- Employee Record --</h2>
    <div>
      <div class="form-group">
        <label for="txtFirstName">First Name:</label>
        <input type="text" class="form-control" id="txtFirstName" value="<%= employee[0].firstName %>"
          name="txtFirstName" />
      </div>
      <div class="form-group">
        <label for="txtLastName">Last Name:</label>
        <input type="text" class="form-control" id="txtLastName" value="<%= employee[0].lastName %>"
          name="txtLastName" />
      </div>
    </div>
    <a href="/" class="btn btn-info">Return to Employees</a>
</main>
<%- include('footer') -%>